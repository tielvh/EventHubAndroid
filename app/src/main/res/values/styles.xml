<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorLightTitle</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">1.5</item>
    </style>

    <style name="SubTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorLightSubTitle</item>
        <item name="android:textSize">20sp</item>
        <item name="fontWeight">500</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">1.5</item>
    </style>

    <style name="DetailsTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailsSubTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorDetailsSubTitle</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AccountName" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AccountUserName" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Error" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/colorError</item>
    </style>

</resources>